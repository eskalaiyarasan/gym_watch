<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="simpletimer.simpletimerii.MainActivity">
    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/dispText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press Start to Continue"
            android:layout_above="@+id/timerText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:textColor="#ff0000"
            />
        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timer"
            android:layout_above="@+id/startBut"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40sp"
            android:layout_marginBottom="30dp"
         />
        <Button
            android:id="@+id/startBut"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="START"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
         />
        <Button
            android:id="@+id/stopBut"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="STOP"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            />
        <Button
            android:id="@+id/pauseBut"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="PAUSE"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom= "30dp"
            />
        <Button
            android:id="@+id/setBut"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="SETTING"
            android:layout_below="@+id/pauseBut"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
         />
    </android.widget.RelativeLayout>


</android.support.constraint.ConstraintLayout>
